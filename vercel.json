{
  "version": 2,
  "builds": [
    {
      "src": "bin/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["bin/**"] }
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "bin/index.js"
    },
    {
      "source": "/about",
      "destination": "public/index.html"
    }
  ]
}
